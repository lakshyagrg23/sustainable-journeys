{
  "kind": "collectionType",
  "collectionName": "packages",
  "info": {
    "singularName": "package",
    "pluralName": "packages",
    "displayName": "Package"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "short_description": {
      "type": "string",
      "minLength": 20,
      "required": true
    },
    "duration": {
      "type": "string",
      "required": true
    },
    "discount": {
      "type": "decimal"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "person": {
      "type": "string"
    },
    "original_price": {
      "type": "decimal",
      "required": true
    },
    "rating": {
      "type": "integer"
    },
    "number_of_reviews": {
      "type": "integer"
    },
    "images": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "detailed_description": {
      "type": "richtext",
      "required": true,
      "minLength": 100
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Whats_Included": {
      "type": "component",
      "component": "repeatable.whats-included-item",
      "repeatable": true
    },
    "itinerary": {
      "type": "component",
      "component": "repeatable.itinerary",
      "repeatable": true
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "family",
        "honeymoon",
        "adventure",
        "group"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "tripType": {
      "type": "enumeration",
      "enum": [
        "Trek",
        "Tour",
        "Luxury",
        "Wildlife",
        "Spiritual",
        "Adventure",
        "Heli"
      ]
    },
    "region": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::region.region",
      "inversedBy": "packages"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "Easy",
        "Moderate",
        "Challenging"
      ]
    },
    "maxAltitudeM": {
      "type": "decimal"
    },
    "bestSeason": {
      "type": "enumeration",
      "enum": [
        "Spring",
        "Autumn",
        "Winter",
        "Summer",
        "All year"
      ]
    },
    "startPoint": {
      "type": "string"
    },
    "endPoint": {
      "type": "string"
    },
    "faqs": {
      "type": "json"
    },
    "costInfo": {
      "type": "blocks"
    }
  }
}
